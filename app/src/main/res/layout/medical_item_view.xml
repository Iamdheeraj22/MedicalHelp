<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginStart="@dimen/_15sdp"
    android:background="@drawable/drop_down_background"
    android:layout_marginEnd="@dimen/_15sdp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_record_pic"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/security"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkup"
        android:id="@+id/item_category"
        android:layout_toEndOf="@id/item_record_pic"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito_semi_bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/corona_negative"
        android:layout_below="@id/item_category"
        android:fontFamily="@font/nunito_semi_bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_toRightOf="@id/item_record_pic"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temp_date"
        android:id="@+id/item_date"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:fontFamily="@font/nunito_semi_bold"
        android:textSize="@dimen/_10sdp"/>

    <ImageView
        android:id="@+id/item_document"
        android:layout_width="match_parent"
        android:background="@drawable/only_corners"
        android:layout_height="@dimen/_100sdp"
        android:visibility="gone"
        android:layout_below="@id/item_record_pic"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"/>
</RelativeLayout>