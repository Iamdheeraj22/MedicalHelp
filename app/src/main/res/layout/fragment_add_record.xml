<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.Home.AddRecordFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginStart="@dimen/_15sdp"
                    android:id="@+id/back_button"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_round_arrow_back_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_toEndOf="@id/back_button"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:text="@string/add_medical_record"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/nunito_medium"
                    android:layout_height="wrap_content"
                    android:text="@string/select_category"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:text="@string/select_category"
                    android:paddingStart="@dimen/_15sdp"
                    android:background="@drawable/drop_down_background"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:paddingTop="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:id="@+id/categoryDropdown"
                    app:drawableEndCompat="@drawable/ic_round_arrow_drop_down_24"
                    tools:ignore="RtlSymmetry" />

                <EditText
                    android:background="@drawable/custom_editext"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:hint="@string/diagnose"
                    android:contentDescription="@string/app_name"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription,RtlSymmetry"
                    android:importantForAutofill="no" />

                <EditText
                    android:background="@drawable/custom_editext"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:hint="@string/select_date"
                    android:contentDescription="@string/app_name"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription,RtlSymmetry"
                    android:importantForAutofill="no" />

                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_height="2dp"
                    android:background="@color/gray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/general_condition"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/nunito_medium"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_10sdp"/>

                <EditText
                    android:background="@drawable/custom_editext"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:hint="@string/blood_presure_mmhg"
                    android:contentDescription="@string/app_name"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription,RtlSymmetry"
                    android:importantForAutofill="no" />

                <EditText
                    android:background="@drawable/custom_editext"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:hint="@string/body_temperature"
                    android:contentDescription="@string/app_name"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription,RtlSymmetry"
                    android:importantForAutofill="no" />

                <EditText
                    android:background="@drawable/custom_editext"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:hint="@string/heart_rate_bpm"
                    android:contentDescription="@string/app_name"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription,RtlSymmetry"
                    android:importantForAutofill="no" />

                <androidx.cardview.widget.CardView
                    android:backgroundTint="#E6E6E6"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_height="@dimen/_150sdp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:backgroundTint="@color/black"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_round_add_24"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/save_record"
                    android:background="@drawable/common_button_bck"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:paddingBottom="@dimen/_10sdp"
                    android:textAlignment="center"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>